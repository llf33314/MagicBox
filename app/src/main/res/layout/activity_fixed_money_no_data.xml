<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pushLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3">

    <ImageView
        android:id="@+id/qrCodeBg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_422"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_20"
        android:src="@drawable/shape_match_bg" />


    <Button
        android:id="@+id/addFixedMoney"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_37"
        android:layout_below="@id/qrCodeBg"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/selector_red_button"
        android:text="@string/click_add"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_18" />

    <ImageView
        android:id="@+id/noDataImage"
        android:layout_width="@dimen/dp_154"
        android:layout_height="@dimen/dp_160"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_96"
        android:src="@drawable/fixed_money_no_data" />

    <TextView
        android:id="@+id/noDataTip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_below="@id/noDataImage"
        android:layout_marginTop="@dimen/dp_36"
        android:gravity="center"
        android:text="@string/fixed_money_no_data_tip"
        android:textColor="#777777"
        android:textSize="@dimen/dp_14" />
</RelativeLayout>