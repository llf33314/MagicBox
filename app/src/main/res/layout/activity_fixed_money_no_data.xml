<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/fixMoneyBar"
        layout="@layout/toolbar_fixed_money" />

    <com.synodata.scanview.view.CodePreview
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fixMoneyBar"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fixMoneyBar"
        android:background="#f3f3f3">

        <RelativeLayout
            android:id="@+id/noDataLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:id="@+id/noDataBg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_422"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/shape_match_bg" />


            <Button
                android:id="@+id/addFixedMoney"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_37"
                android:layout_below="@id/noDataBg"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/selector_red_button"
                android:text="@string/click_add"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_18" />

            <ImageView
                android:id="@+id/noDataImage"
                android:layout_width="@dimen/dp_154"
                android:layout_height="@dimen/dp_160"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_96"
                android:src="@drawable/fixed_money_no_data" />

            <TextView
                android:id="@+id/noDataTip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_below="@id/noDataImage"
                android:layout_marginTop="@dimen/dp_36"
                android:gravity="center"
                android:text="@string/fixed_money_no_data_tip"
                android:textColor="#777777"
                android:textSize="@dimen/dp_14" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dataLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:splitMotionEvents="false">

            <ImageView
                android:id="@+id/qrCodeBg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_320"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/shape_match_bg" />

            <RelativeLayout
                android:id="@+id/supportLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_60"
                    android:gravity="center"
                    android:rotation="180"
                    android:text="支付宝支付"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_12" />

                <ImageView
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_140"
                    android:src="@drawable/pay_support_alipay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_100"
                    android:gravity="center"
                    android:rotation="180"
                    android:text="微信支付"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_12" />

                <ImageView
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_60"
                    android:src="@drawable/pay_support_wechat" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="#eeeeee" />
            </RelativeLayout>

            <TextView
                android:id="@+id/push_customer_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/supportLayout"
                android:layout_marginTop="@dimen/dp_2"
                android:gravity="center"
                android:rotation="180"
                android:text="¥168"
                android:textColor="#000000"
                android:textSize="@dimen/dp_23" />

            <TextView
                android:id="@+id/tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/push_customer_money"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:rotation="180"
                android:text="@string/pay_code_aim_tip"
                android:textColor="#999999"
                android:textSize="@dimen/dp_12" />


            <ImageView
                android:id="@+id/push_qrCode"
                android:layout_width="@dimen/dp_174"
                android:layout_height="@dimen/dp_170"
                android:layout_below="@id/tip"
                android:layout_centerHorizontal="true"
                android:rotation="180" />


            <Button
                android:id="@+id/confirmOrder"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_36"
                android:layout_below="@id/push_qrCode"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/selector_red_button"
                android:text="@string/confirm_pay"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_15" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/confirmOrder"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_20"
                android:fadingEdge="none"
                android:horizontalSpacing="@dimen/dp_1"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:splitMotionEvents="false"
                android:verticalSpacing="@dimen/dp_1"></android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>