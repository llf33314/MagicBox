<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#484848">

    <LinearLayout
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <GridView
            android:id="@+id/grid_keyboard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@color/gray"
            android:focusable="true"
            android:horizontalSpacing="1px"
            android:numColumns="3"
            android:verticalSpacing="1px" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/keyboard_clear"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/selector_keyboard_red_bottom"
                android:text="@string/clear"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <Button
                android:id="@+id/keyboard_delete"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/selector_keyboard_red_bottom"
                android:text="@string/delete"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <Button
                android:id="@+id/keyboard_pay"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@drawable/selector_keyboard_red_btn"
                android:gravity="center"
                android:text="@string/collect"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/keyboard_fit_pay"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/selector_keyboard_red_bottom"
                android:gravity="center"
                android:text="@string/fit_collect"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <Button
                android:id="@+id/keyboard_member_pay"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/selector_keyboard_red_btn"
                android:gravity="center"
                android:text="@string/member_collect"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/input"
        android:orientation="vertical">

        <RelativeLayout
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/tip_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_28"
                android:background="@drawable/tip_bg"
                android:orientation="vertical">

                <TextView
                    android:textSize="@dimen/dp_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/open_camera_tip"
                    android:textColor="#999999" />

                <TextView
                    android:id="@+id/tip_aim"
                    android:textSize="@dimen/dp_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/please_aim_tip"
                    android:textColor="#999999" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/chargeLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/gray"
            android:visibility="invisible">

            <TextView
                android:id="@+id/text_should_paid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/should_paid"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:text="@string/charge"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/should_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="28dp" />

            <TextView
                android:id="@+id/charge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/showNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:gravity="right"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="34dp" />

            <TextView
                android:id="@+id/text_paid_in_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/paid_in_amount"
                android:textColor="@color/white"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>