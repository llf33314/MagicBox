<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70"
    android:background="@drawable/selector_order_item"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_16">

        <TextView
            android:id="@+id/textOrderNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="订单号 :"
            android:textColor="#999999"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/valueOrderNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@id/textOrderNo"
            android:gravity="center_vertical"
            android:text="123123"
            android:textColor="#333333"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textOrderNo"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="创建时间 :"
            android:textColor="#999999"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/valueTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textOrderNo"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/textTime"
            android:gravity="center_vertical"
            android:text="123123"
            android:textColor="#333333"
            android:textSize="@dimen/dp_12" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_28"
            android:src="@drawable/arrow_right" />

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textOrderNo"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toLeftOf="@id/arrow"
            android:gravity="center_vertical"
            android:text="123"
            android:textColor="#333333"
            android:textSize="@dimen/dp_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="#ececec" />
</RelativeLayout>