<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_121"
    android:background="@drawable/selector_order_item"
    >
    <TextView
        android:paddingLeft="@dimen/dp_18"
        android:textSize="@dimen/dp_12"
        android:visibility="gone"
        android:gravity="left|center_vertical"
        android:textColor="#333333"
        android:id="@+id/timeTitle"
        android:background="#ececec"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_37" />
    <RelativeLayout
        android:id="@+id/swipeLayout"
        android:layout_below="@id/timeTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_79"
        >
         <ImageView
             android:id="@+id/item_icon"
             android:layout_marginLeft="@dimen/dp_18"
             android:layout_centerVertical="true"
             android:src="@drawable/order_list_alipay"
             android:layout_width="@dimen/dp_37"
             android:layout_height="@dimen/dp_37" />
        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_toRightOf="@id/item_icon"
            android:text="123"
            android:textColor="#333333"
            android:textSize="@dimen/dp_18" />

        <TextView
            android:id="@+id/valueOrderNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_toRightOf="@id/item_icon"
            android:layout_below="@id/money"
            android:gravity="center_vertical"
            android:text="123123"
            android:textColor="#bdbdbd"
            android:textSize="@dimen/dp_15" />

        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_18"
            android:text="已支付"
            android:textColor="#333333"
            android:textSize="@dimen/dp_15" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_19"
        android:background="#e6e6e6" />
</RelativeLayout>