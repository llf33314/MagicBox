<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec">

    <ImageView
        android:id="@+id/step03_bg"
        android:layout_width="@dimen/dp_330"
        android:layout_height="@dimen/dp_358"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_62"
        android:src="@drawable/step03_bg" />

    <TextView
        android:id="@+id/step03_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_371"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="#333333"
        android:textSize="@dimen/dp_16" />

    <TextView
        android:id="@+id/countTimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_200"
        android:gravity="center_horizontal"
        android:textColor="#f04a4a"
        android:textSize="@dimen/dp_20" />
</RelativeLayout>