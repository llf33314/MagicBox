<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/step02_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_358"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_62"
        android:src="@drawable/shape_match_bg" />

    <RelativeLayout
        android:id="@+id/layout2400"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <Button
            android:id="@+id/baud2400"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginRight="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_189"
            android:background="@drawable/selector_red_radius_button"
            android:text="@string/baud2400"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/baudOther"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@id/baud2400"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginRight="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/selector_red_radius_button"
            android:text="@string/other"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tipChose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/baudOther"
            android:layout_marginTop="@dimen/dp_86"
            android:gravity="center_horizontal"
            android:text="@string/please_select_baud_rate"
            android:textColor="#333333"
            android:textSize="@dimen/dp_16" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutOther"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/tipChoseOther"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_86"
            android:gravity="center_horizontal"
            android:text="@string/please_select_baud_rate"
            android:textColor="#333333"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:id="@+id/tip_baud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tipChoseOther"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_36"
            android:text="@string/baud_rate"
            android:textColor="#333333"
            android:textSize="@dimen/dp_15" />

        <TextView
            android:id="@+id/selected_baud"
            android:layout_width="@dimen/dp_240"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@id/tipChoseOther"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_toRightOf="@id/tip_baud"
            android:background="@drawable/shape_baud_input"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="@dimen/dp_18" />

        <TextView
            android:id="@+id/oftenTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/selected_baud"
            android:layout_marginLeft="@dimen/dp_94"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/often_baud_rate"
            android:textColor="#999999"
            android:textSize="@dimen/dp_12" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/baudRecyclerView"
            android:layout_width="@dimen/dp_245"
            android:layout_height="@dimen/dp_80"
            android:layout_below="@id/oftenTip"
            android:layout_marginLeft="@dimen/dp_94"
            android:layout_marginTop="@dimen/dp_15"
            android:scrollbars="none" />

    </RelativeLayout>

    <Button
        android:id="@+id/step02_next"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:background="@drawable/selector_red_button"
        android:text="@string/next_step"
        android:textColor="@color/white" />
</RelativeLayout>