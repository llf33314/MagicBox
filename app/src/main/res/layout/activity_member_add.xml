<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/followLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textFollow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_22"
            android:gravity="center_vertical"
            android:text="@string/follow_subscription"
            android:textColor="#333333"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <com.suke.widget.SwitchButton
                android:id="@+id/switch_button"
                android:layout_width="@dimen/dp_52"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:sb_show_indicator="false"
                app:sb_checked="true"
                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imgQRCode"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_140"
            android:layout_below="@id/textFollow"
            android:layout_centerHorizontal="true"
            android:src="@drawable/test_qr" />

        <TextView
            android:id="@+id/textTip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_below="@id/imgQRCode"
            android:gravity="center"
            android:text="@string/customer_scan_code_to_join"
            android:textColor="#333333"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/textTip"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:background="#cccccc" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/memberTypeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@id/followLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_22"
            android:gravity="center_vertical"
            android:text="@string/member_type"
            android:textColor="#333333"
            android:textSize="12sp" />
    </RelativeLayout>
</RelativeLayout>