<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec">

    <RelativeLayout
        android:id="@+id/followLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <TextView
            android:id="@+id/textFollow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_22"
            android:gravity="center_vertical"
            android:text="@string/follow_subscription"
            android:textColor="#333333"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <com.suke.widget.SwitchButton
                android:id="@+id/switch_button"
                android:layout_width="@dimen/dp_52"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:sb_checked="true"
                app:sb_show_indicator="false" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imgQRCode"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_140"
            android:layout_below="@id/textFollow"
            android:layout_centerHorizontal="true"
             />

        <TextView
            android:id="@+id/textTip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_below="@id/imgQRCode"
            android:gravity="center"
            android:text="@string/customer_scan_code_to_join"
            android:textColor="#333333"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/textTip"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:background="#cccccc" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/memberTypeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@id/followLayout"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_22"
            android:gravity="center_vertical"
            android:text="@string/member_type"
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/memberCardType"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_100"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:background="#cccccc" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/phoneLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@id/memberTypeLayout"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_22"
            android:gravity="center_vertical"
            android:text="@string/phone"
            android:textColor="#333333"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_92"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/input_phone"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/black"
            android:textColorHint="#cccccc"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:background="#cccccc" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/identifyingLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@id/phoneLayout"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_22"
            android:gravity="center_vertical"
            android:text="@string/identifying_code"
            android:textColor="#333333"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/identifyingEditText"
            android:layout_width="@dimen/dp_150"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_92"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/input_identifying_code"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@color/black"
            android:textColorHint="#cccccc"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/get_identifying_code"
            android:layout_width="@dimen/dp_93"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_9"
            android:text="@string/get_identifying_code"
            android:textColor="#f04a4a"
            android:textSize="12sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_toLeftOf="@id/get_identifying_code"
            android:background="#cccccc" />
    </RelativeLayout>
    <Button
        android:layout_below="@id/identifyingLayout"
        android:id="@+id/confirmButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/selector_red_button"
        android:text="@string/confirm"
        android:textColor="#fff"
        android:textSize="15sp" />
</RelativeLayout>