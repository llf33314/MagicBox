<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_295"
    android:layout_height="@dimen/dp_225"
    android:background="@drawable/white_radius_bg"
    android:gravity="center">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:gravity="center"
        android:text="使用手册"
        android:textColor="#333333"
        android:textSize="@dimen/dp_15" />

    <ImageView
        android:id="@+id/close"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_43"
        android:layout_alignParentRight="true"
        android:paddingBottom="@dimen/dp_12"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14"
        android:paddingTop="@dimen/dp_12"
        android:src="@drawable/btn_close" />

    <View
        style="@style/gray_line"
        android:layout_below="@id/title" />

    <ImageView
        android:id="@+id/qrImageView"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@drawable/manual" />

    <TextView
        android:id="@+id/qrTip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/qrImageView"
        android:gravity="center_horizontal"
        android:text="@string/please_scan_code_to_get_manual"
        android:textColor="#333333" />


</RelativeLayout>