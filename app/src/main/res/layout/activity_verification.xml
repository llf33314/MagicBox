<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <include
            android:id="@+id/member_info_layout"
            layout="@layout/member_head_info_layout" />

        <TextView
            android:id="@+id/order_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/member_info_layout"
            android:layout_marginLeft="@dimen/dp_16"
            android:gravity="center_vertical"
            android:text="订单金额 : ¥436.32元"
            android:textColor="#333333"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_weight="5.6"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="0.1"
            android:background="#dcdcdc" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:text="@string/please_select_discount"
            android:textColor="#333333" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/coupon_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fen_coin_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:text="@string/discount_info"
            android:textColor="#333333"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_weight="5.6">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="@dimen/dp_15"
            android:background="#dcdcdc" />

        <TextView
            android:id="@+id/text_paid_in_amount"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_34"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:text="实收金额: ¥416.32"
            android:textColor="#333333"
            android:textSize="24sp" />

        <Button
            android:id="@+id/chose_pay"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/text_paid_in_amount"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/selector_red_button"
            android:text="@string/chose_pay"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/cancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/chose_pay"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/selector_white_button"
            android:text="@string/cancel"
            android:textColor="@drawable/selector_text_color"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>