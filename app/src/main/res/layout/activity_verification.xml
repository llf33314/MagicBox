<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <RelativeLayout
            android:id="@+id/member_info_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_105"
            android:background="@drawable/member_info_bg">

            <ImageView
                android:layout_width="@dimen/dp_62"
                android:layout_height="@dimen/dp_62"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_57"
                android:background="@drawable/member_head_bg" />

            <ImageView
                android:id="@+id/image_head"
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_36"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_68"
                android:background="@drawable/member_head_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_149"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:singleLine="true"
                    android:text="徐小明"
                    android:textColor="#fff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/card_type"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:singleLine="true"
                    android:text="会员卡 : 折扣卡（四级）"
                    android:textColor="#fff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:singleLine="true"
                    android:text="手机号 : 18945692233"
                    android:textColor="#fff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/right"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:singleLine="true"
                    android:text="权益 : 享8.5折"
                    android:textColor="#fff"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/order_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/member_info_layout"
            android:layout_marginLeft="@dimen/dp_16"
            android:gravity="center_vertical"
            android:text="订单金额 : ¥436.32元"
            android:textColor="#333333"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/dp_15"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.6">
         <View
             android:background="#dcdcdc"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="0.1"
             android:layout_marginRight="@dimen/dp_15"
             />
         <TextView
             android:gravity="center_vertical"
             android:textColor="#333333"
             android:text="@string/please_select_discount"
             android:layout_weight="4"
             android:layout_width="match_parent"
             android:layout_height="0dp" />
        <android.support.v7.widget.RecyclerView
            android:layout_weight="6"
            android:id="@+id/coupon_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            />
        <android.support.v7.widget.RecyclerView
            android:layout_weight="7"
            android:id="@+id/fen_coin_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
      />
        <TextView
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="#333333"
            android:text="@string/discount_info"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.6">
        <View
            android:background="#dcdcdc"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="@dimen/dp_15"
            />
        <TextView
            android:id="@+id/text_paid_in_amount"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="24sp"
            android:textColor="#333333"
            android:text="实收金额: ¥416.32"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_34" />
        <Button
            android:id="@+id/chose_pay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/text_paid_in_amount"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_15"
            android:text="@string/chose_pay"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:background="@drawable/selector_red_button"
            style="?android:attr/borderlessButtonStyle"
            />
        <Button
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/chose_pay"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:text="@string/cancel"
            android:textColor="@drawable/selector_text_color"
            android:textSize="15sp"
            android:background="@drawable/selector_white_button"
            style="?android:attr/borderlessButtonStyle"
            />
    </RelativeLayout>

</LinearLayout>