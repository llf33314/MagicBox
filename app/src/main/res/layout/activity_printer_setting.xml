<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingTop="@dimen/dp_20"
    >
    <TextView
        android:id="@+id/tv_config_bt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:textSize="16sp"
        android:textColor="@color/white"
       android:gravity="center"
        android:background="@drawable/selector_red_button"
        android:text="配置蓝牙打印机"
        />
    <TextView
        android:id="@+id/tv_config_usb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:textSize="16sp"
        android:textColor="@color/theme_orange"
        android:gravity="center"
        android:text="配置USB打印机"
        android:background="@drawable/btn_orange_border_and_white"
        android:layout_marginTop="@dimen/dp_15"
        android:visibility="gone"
        />
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_config_show"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:textSize="16sp"
        android:textColor="@color/theme_orange"
        android:gravity="center"
        android:background="@drawable/btn_orange_border_and_white"
        android:text="配置客显"
        android:layout_marginTop="@dimen/dp_15"
        />


</LinearLayout>