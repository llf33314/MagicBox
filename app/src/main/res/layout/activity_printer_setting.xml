<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp"
    >
    <TextView
        android:id="@+id/tv_config_bt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:textColor="@color/white"
       android:gravity="center"
        android:background="@drawable/selector_red_button"
        android:text="配置蓝牙打印机"
        />
    <TextView
        android:id="@+id/tv_config_usb"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:textColor="@color/theme_orange"
        android:gravity="center"
        android:text="配置USB打印机"
        android:background="@drawable/btn_orange_borrer_and_white"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/tv_config_show"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:textColor="@color/theme_orange"
        android:gravity="center"
        android:background="@drawable/btn_orange_borrer_and_white"
        android:text="配置客显"
        android:layout_marginTop="15dp"
        />


</LinearLayout>