<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_113"
        android:layout_margin="@dimen/dp_13"
        android:background="@drawable/white_radius_10_bg">

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_57">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_16"
                android:gravity="center_vertical"
                android:text="@string/pay_auto_print"
                android:textColor="#333333"
                android:textSize="@dimen/dp_17" />

            <com.suke.widget.SwitchButton
                android:id="@+id/paySwitchButton"
                android:layout_width="@dimen/dp_54"
                android:layout_height="@dimen/dp_37"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                app:sb_checked="false"
                app:sb_checked_color="#f04a4a"
                app:sb_show_indicator="false" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/divide_gray_color" />

            <View
                android:id="@+id/payPrintSetting"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_57"
            android:layout_below="@id/layout1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_16"
                android:gravity="center_vertical"
                android:text="@string/exchange_auto_print"
                android:textColor="#333333"
                android:textSize="@dimen/dp_17" />

            <com.suke.widget.SwitchButton
                android:id="@+id/exchangeSwitchButton"
                android:layout_width="@dimen/dp_54"
                android:layout_height="@dimen/dp_37"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                app:sb_checked="false"
                app:sb_checked_color="#f04a4a"
                app:sb_show_indicator="false" />

            <View
                android:id="@+id/exchangePrintSetting"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>