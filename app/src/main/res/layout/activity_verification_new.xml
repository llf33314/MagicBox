<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ececec"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/nickNameLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@color/white">

            <TextView
                android:id="@+id/nickName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_16"
                android:gravity="center_vertical"
                android:textColor="#333333"
                android:textSize="@dimen/dp_16" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_16"
                android:gravity="center_vertical"
                android:textColor="#333333"
                android:textSize="@dimen/dp_16" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cardTypeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_16"
                android:gravity="center_vertical"
                android:text="@string/card_type"
                android:textColor="#333333"
                android:textSize="@dimen/dp_16" />

            <TextView
                android:id="@+id/cardTypeInfo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_16"
                android:gravity="center_vertical"
                android:textColor="#333333"
                android:textSize="@dimen/dp_16" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/balanceLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@color/white"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_16"
                android:gravity="center_vertical"
                android:text="@string/balance"
                android:textColor="#333333"
                android:textSize="@dimen/dp_16" />

            <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_16"
                android:gravity="center_vertical"
                android:text="@string/ensure"
                android:textColor="#333333"
                android:textSize="@dimen/dp_16" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/totalMoneyLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_14"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_16"
                android:gravity="center_vertical"
                android:text="@string/total_money"
                android:textColor="#333333"
                android:textSize="@dimen/dp_16" />

            <TextView
                android:id="@+id/totalMoney"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_16"
                android:gravity="center_vertical"
                android:textColor="#333333"
                android:textSize="@dimen/dp_16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#e6e6e6" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/discountLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white"
            android:visibility="gone">

            <TextView
                android:id="@+id/memberDiscount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_16"
                android:gravity="center_vertical"
                android:textColor="#333333"
                android:textSize="@dimen/dp_16" />

            <com.suke.widget.SwitchButton
                android:id="@+id/discountSwitchButton"
                android:layout_width="@dimen/dp_54"
                android:layout_height="@dimen/dp_37"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_14"
                app:sb_checked="true"
                app:sb_checked_color="#f04a4a"
                app:sb_show_indicator="false" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#e6e6e6" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/couponLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_122"
            android:background="@color/white"
            android:visibility="gone">

            <TextView
                android:id="@+id/couponTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_13"
                android:text="选择优惠券"
                android:textColor="#333333"
                android:textSize="@dimen/dp_16" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/coupon_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_below="@id/couponTotal"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#e6e6e6" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fenCoinLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54"
            android:background="@color/white"
            android:visibility="gone">

            <TextView
                android:id="@+id/fenCoinTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_16"
                android:gravity="center_vertical"
                android:textColor="#333333"
                android:textSize="@dimen/dp_16"
                android:visibility="gone" />

            <com.suke.widget.SwitchButton
                android:id="@+id/fenCoinSwitchButton"
                android:layout_width="@dimen/dp_54"
                android:layout_height="@dimen/dp_37"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_14"
                app:sb_checked="true"
                app:sb_checked_color="#f04a4a"
                app:sb_show_indicator="false" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#e6e6e6" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/integrateLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_54"
            android:background="@color/white"
            android:visibility="gone">

            <TextView
                android:id="@+id/integrateTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_16"
                android:gravity="center_vertical"
                android:textColor="#333333"
                android:textSize="@dimen/dp_16" />

            <com.suke.widget.SwitchButton
                android:id="@+id/integrateSwitchButton"
                android:layout_width="@dimen/dp_54"
                android:layout_height="@dimen/dp_37"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_14"
                app:sb_checked="true"
                app:sb_checked_color="#f04a4a"
                app:sb_show_indicator="false" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#e6e6e6" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/detailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/calcDiscountLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_32"
                android:visibility="gone">

                <TextView
                    android:id="@+id/calcDiscountLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:text="会员折扣"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_15" />

                <TextView
                    android:id="@+id/calcDiscountRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_14"
                    android:text="-¥50.00"
                    android:textColor="#f04a4a"
                    android:textSize="@dimen/dp_16" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/calcCouponLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_32"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:text="优惠券"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_15" />

                <TextView
                    android:id="@+id/calcCouponRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_14"
                    android:text="-¥0.0"
                    android:textColor="#f04a4a"
                    android:textSize="@dimen/dp_16" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/calcFenCoinLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_32"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:text="粉币抵扣"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_15" />

                <TextView
                    android:id="@+id/calcFenCoinRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_14"
                    android:text="-¥50.00"
                    android:textColor="#f04a4a"
                    android:textSize="@dimen/dp_16" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/calcIntegrateLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_32"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:text="积分抵扣"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_15" />

                <TextView
                    android:id="@+id/calcIntegrateRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_14"
                    android:text="-¥50.00"
                    android:textColor="#f04a4a"
                    android:textSize="@dimen/dp_16" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#e6e6e6" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/paidInAmountLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_19"
                android:text="@string/paid_in_amount"
                android:textColor="#333333"
                android:textSize="@dimen/dp_16" />

            <TextView
                android:id="@+id/text_paid_in_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_14"
                android:textColor="#f04a4a"
                android:textSize="@dimen/dp_19" />
        </RelativeLayout>

        <Button
            android:id="@+id/chose_pay"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/selector_red_button"
            android:text="@string/to_settle_accounts"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/cancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/chose_pay"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/selector_white_button"
            android:text="@string/cancel"
            android:textColor="@drawable/selector_text_color"
            android:textSize="15sp" />
    </LinearLayout>
</ScrollView>