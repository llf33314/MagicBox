<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_295"
    android:layout_height="@dimen/dp_143"
    android:background="@drawable/white_radius_bg"
    android:gravity="center">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="left|center_vertical"
        android:text="修改设备名称"
        android:textColor="#333333"
        android:textSize="@dimen/dp_15" />

    <EditText
        android:id="@+id/nameEdit"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_26"
        android:layout_below="@id/title"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="@string/limit_15_words"
        android:maxLength="15"
        android:paddingLeft="@dimen/dp_13"
        android:textColor="#333333"
        android:textColorHint="#999999"
        android:textSize="@dimen/dp_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/nameEdit"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        android:background="#f04a4a" />

    <TextView
        android:id="@+id/confirm"
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_38"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="#333333" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_38"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toLeftOf="@id/confirm"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="#333333" />

</RelativeLayout>