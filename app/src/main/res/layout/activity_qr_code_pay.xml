<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/customer_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30">

            <TextView
                android:id="@+id/customer_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:rotation="180"
                android:text="¥168"
                android:textColor="@color/pay_number"
                android:textSize="@dimen/dp_40" />

            <ImageView
                android:id="@+id/qrCode"
                android:layout_width="@dimen/dp_173"
                android:layout_height="@dimen/dp_173"
                android:layout_below="@id/customer_money"
                android:layout_centerHorizontal="true"
                android:rotation="180" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/qrCode"
                android:gravity="center"
                android:rotation="180"
                android:text="@string/pay_code_aim_tip"
                android:textColor="#333333"
                android:textSize="@dimen/dp_17" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/dp_14"
            android:layout_weight="0.1"
            android:background="#dcdcdc" />

        <RelativeLayout
            android:id="@+id/cashier_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="22">

            <TextView
                android:id="@+id/cashier_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_64"
                android:gravity="center"
                android:text="¥168"
                android:textColor="#333333"
                android:textSize="@dimen/dp_40" />

            <Button
                android:id="@+id/reChosePay"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_43"
                android:layout_below="@id/cashier_money"
                android:layout_margin="@dimen/dp_16"
                android:background="@drawable/selector_red_button"
                android:text="@string/re_chose_pay"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:visibility="invisible"
        android:id="@+id/capture_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>