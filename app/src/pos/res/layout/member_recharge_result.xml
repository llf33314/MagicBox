<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:visibility="gone"
        android:id="@+id/customer_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_64"
        android:gravity="center"
        android:rotation="180"
        android:text="@string/pay_success"
        android:textColor="#333333"
        android:textSize="@dimen/dp_14" />

    <TextView
        android:visibility="gone"
        android:id="@+id/custom_recharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/customer_balance"
        android:layout_marginTop="@dimen/dp_4"
        android:gravity="center"
        android:rotation="180"
        android:singleLine="true"
        android:text="365"
        android:textColor="#333333"
        android:textSize="@dimen/dp_18" />

    <TextView
        android:visibility="gone"
        android:id="@+id/customer_success_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/custom_recharge"
        android:layout_marginTop="@dimen/dp_18"
        android:gravity="center"
        android:rotation="180"
        android:text="@string/recharge_success"
        android:textColor="#333333"
        android:textSize="@dimen/dp_14" />

    <ImageView
        android:visibility="gone"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@id/customer_success_tip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/success"
        android:rotation="180" />

    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dp_15"
        android:background="@color/gray" />
    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/confirmButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_marginBottom="@dimen/dp_120"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:background="@drawable/selector_red_button"
        android:text="@string/confirm"
        android:textColor="#fff"
        android:textSize="@dimen/dp_15" />

    <TextView
        android:id="@+id/cashier_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/confirmButton"
        android:layout_marginBottom="@dimen/dp_24"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="@dimen/dp_26" />

    <TextView
        android:id="@+id/cashier_recharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/cashier_balance"
        android:gravity="center"
        android:singleLine="true"
        android:text="365"
        android:textColor="#333333"
        android:textSize="@dimen/dp_26" />

    <TextView
        android:id="@+id/cashier_success_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/cashier_recharge"
        android:gravity="center"
        android:text="@string/recharge_success"
        android:textColor="#333333"
        android:textSize="@dimen/dp_26" />

    <ImageView
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_above="@id/cashier_success_tip"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/dp_4"
        android:background="@drawable/success" />
</RelativeLayout>